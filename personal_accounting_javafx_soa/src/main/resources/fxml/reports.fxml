<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/21" 
      fx:controller="ua.kpi.personal.controller.ReportsController"
      spacing="10"
      prefHeight="600.0" prefWidth="800.0">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Параметри Звіту" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Тип звіту:"/>
        <ComboBox fx:id="reportTypeCombo" promptText="Тип Звіту"/>

        <Label text="Період з:"/>
        <DatePicker fx:id="startDatePicker"/>

        <Label text="по:"/>
        <DatePicker fx:id="endDatePicker"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="generateButton" text="Побудувати Звіт" style="-fx-base: #4CAF50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="exportExcelButton" text="Експорт (Excel)"/>
        <Button fx:id="exportPdfButton" text="Експорт (PDF)"/>
    </HBox>
    
    <Label fx:id="summaryLabel" style="-fx-font-weight: bold; -fx-text-fill: blue;"/>
    
    <TabPane fx:id="visualizationTabPane" VBox.vgrow="ALWAYS">
        <tabs>
            <Tab text="Таблиця">
                <BorderPane>
                    <center>
                        <TableView fx:id="reportTableView"/> 
                    </center>
                </BorderPane>
            </Tab>
            
            <Tab text="Діаграма">
                <AnchorPane fx:id="chartContainer"/>
            </Tab>
        </tabs>
    </TabPane>
    <Button fx:id="backBtn" text="Назад" onAction="#onBack" styleClass="back-button"/>
</VBox>