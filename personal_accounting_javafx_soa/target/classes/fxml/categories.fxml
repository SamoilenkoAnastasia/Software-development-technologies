<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ua.kpi.personal.controller.CategoriesController" 
      spacing="10">

    <stylesheets>
        <URL value="@css/style.css" />
    </stylesheets>

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Категорії" styleClass="title-label"/>
    <ListView fx:id="listView" prefHeight="250"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
        </columnConstraints>

        <Label text="Назва:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Тип:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <ChoiceBox fx:id="typeChoice" prefWidth="100" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Батьківська:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <ChoiceBox fx:id="parentChoice" prefWidth="100" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <!-- Кнопки керування (fx:id відповідають @FXML полям у контролері) -->
        <Button fx:id="addButton" text="Додати" onAction="#onAdd"/>
        <Button fx:id="editButton" text="Редагувати" onAction="#onEdit"/>
        <Button fx:id="deleteButton" text="Видалити вибрану" onAction="#onDelete"/>
        <Button fx:id="cancelEditBtn" text="Скасувати" onAction="#onCancelEdit"/>
    </HBox>

    <Label fx:id="messageLabel"/>

    <Button fx:id="backBtn" text="Назад" onAction="#onBack" styleClass="back-button"/>
</VBox>