<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?> <AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="ua.kpi.personal.controller.LoginController">
    
    <stylesheets>
        <URL value="@/css/style.css" /> 
    </stylesheets>
    
    <children>
        <VBox spacing="10" layoutX="20" layoutY="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
            
            <Label text="Особиста бухгалтерія" style="-fx-font-size:18px; -fx-font-weight:bold;" />
            <Label fx:id="messageLabel"/>
            
            <HBox spacing="10">
                <Label text="Username:"/>
                <TextField fx:id="usernameField" HBox.hgrow="ALWAYS"/> </HBox>
            
            <HBox spacing="10">
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS"/> </HBox>
            
            <HBox spacing="10">
                <Button fx:id="loginButton" text="Login" onAction="#onLogin"/>
                <Button fx:id="registerButton" text="Register" onAction="#onRegister"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>