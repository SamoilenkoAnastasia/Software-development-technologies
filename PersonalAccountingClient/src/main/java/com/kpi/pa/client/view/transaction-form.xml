<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kpi.pa.client.controller.TransactionController"
            prefHeight="400.0" prefWidth="350.0">
    <VBox spacing="10" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10"/>
        </padding>

        <Text style="-fx-font-size: 18px;" text="Додати Нову Транзакцію"/>

        <Label text="Тип операції:"/>
        <ComboBox fx:id="typeComboBox" prefWidth="150" promptText="Витрата/Дохід"/>

        <Label text="Рахунок:"/>
        <ComboBox fx:id="accountComboBox" prefWidth="300" promptText="Вибрати рахунок"/>

        <Label text="Категорія:"/>
        <ComboBox fx:id="categoryComboBox" prefWidth="300" promptText="Вибрати категорію"/>

        <Label text="Сума (грн):"/>
        <TextField fx:id="amountField" promptText="0.00"/>

        <Label text="Опис:"/>
        <TextArea fx:id="descriptionArea" prefHeight="50" promptText="Короткий опис транзакції (наприклад, 'Покупка продуктів')"/>
        
        <Label text="Дата:"/>
        <DatePicker fx:id="datePicker" />

        <Button text="Зберегти" onAction="#handleSaveTransaction" defaultButton="true"/>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
    </VBox>
</AnchorPane>

